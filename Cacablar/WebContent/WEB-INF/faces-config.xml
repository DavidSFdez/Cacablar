<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>login</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>list</from-outcome>
			<to-view-id>/listTrips.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>registTrip</from-outcome>
			<to-view-id>/registerTrip.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>listRelated</from-outcome>
			<to-view-id>/listTripsRelated.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{user.login}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{user.register}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>fracaso</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/registerTrip.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{wizard.save}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/index.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/listTripsRelated.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{trip.manage(var.id)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/showTrip.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
